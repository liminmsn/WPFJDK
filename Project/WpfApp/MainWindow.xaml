<Window 
	x:Class="WpfApp.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	xmlns:local="clr-namespace:WpfApp"
	mc:Ignorable="d"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	Background="Transparent"
	AllowsTransparency="True"
	Foreground="#ABE0F0"
	Title="JDK管理"
	Height="450"
	Width="800">
	<Border x:Name="main_box" Background="#82FFEE91" CornerRadius="6" Padding="4">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Border Grid.Row="0"
			MouseLeftButtonDown="Border_MouseLeftButtonDown"
			Padding="{Binding ElementName=main_box,Path=Padding}" 
			CornerRadius="{Binding ElementName=main_box,Path=CornerRadius}" 
			Background="#F5C857" Cursor="Hand" >
				<DockPanel Cursor="Hand" VerticalAlignment="Center">
					<TextBlock VerticalAlignment="Center">标题</TextBlock>
					<Button HorizontalAlignment="Right" Padding="6,2,6,2">
						<ui:SymbolIcon Symbol="DismissCircle12" Foreground="Red" MouseDown="SymbolIcon_MouseDown" />
					</Button>
				</DockPanel>
			</Border>
			<Border
			Margin="0,4,0,0"
			Padding="{Binding ElementName=main_box,Path=Padding}"
			CornerRadius="{Binding ElementName=main_box,Path=CornerRadius}"
			Grid.Row="1" 
			Background="#E2852E" 
			VerticalAlignment="Stretch">
				<TextBlock>hello world</TextBlock>
			</Border>
		</Grid>
	</Border>
</Window>
